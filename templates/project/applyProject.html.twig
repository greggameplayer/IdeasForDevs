{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block body %}
    <section class="page-section">
        <div class="card d-flex flex-row" style="margin-bottom: 1em; margin-top:1em; margin-left:1em; margin-right:1em">
                <div class="card-body d-flex flex-row">
                    <div class="col-sm-3" style="margin-right: 1em; margin-top: auto; margin-bottom: auto">
                        <img src="{{ asset('images/noIMG.jpg') }}"  style="width:100%">
                    </div>
                    <div>
                        <h5 class="card-title">{{ project.name }}</h5>
                        <div class="d-flex flex-row">
                            <p><ins>Créateur du Projet</ins> :</p>
                            <p style="font-weight: bold; margin-left: 0.5em">{{ project.account.firstname }} {{ project.account.lastname }}</p>
                        </div>
                        <p class="card-text"><ins>Description du projet</ins> :  {{ project.description }}</p>
                        <p>Compétences voulues : NULL</p>
                        <p>Nombre de personnes attendues : NULL</p>
                    </div>
                </div>

                <div>
                    
                </div>

            <div class="card-body " style="max-width: 8em">
                <a data-toggle="tooltip" data-placement="top" title="Signaler le projet" href="{{ path( 'applyToProject', {'idProject': project.id, } ) }}"><i class="far fa-flag text-danger"></i></a>
            </div>
        </div>   
    </section>

    {{ form_start(form, {'attr':{'class':'w-75 d-flex flex-column'}} )}}
        {{ form_row(form.description) }}
        <div class="mt-4 d-flex justify-content-center w-100 button">
            {{ form_row(form.Sauvegarder)}}
        </div>
        <div class="d-flex justify-content-center mt-5 w-100" align="center">
            <div class="w-50" align="center">
                <a href="{{ path('allProjects') }}" class="btn btn-primary mt-5" align="center">Retour</a>
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}