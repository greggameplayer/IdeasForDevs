{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/applyProject.css') }}" type="text/css"/>
{% endblock %}


{% block body %}

    <style>
        .img {
            display: inline-block;
            position: relative;
            width: 200px;
            height: 140px;
            overflow: hidden;
        }
    </style>

    
    <section class="page-section">
        <div class="card d-flex" style="margin-bottom: 1em; margin-top:1em; margin-left:1em; margin-right:1em">
                <div class="card-body d-flex flex-row">
                    <div class="card-body d-flex flex-row flex-wrap">
                        <div class="w-sm-75"style="margin-right: 1em; margin-left: 0; margin-top: auto; margin-bottom: auto max:width:5em">
                            <img src="{{ asset('images/noIMG.jpg') }}" class="img">
                        </div>
                        <div>
                            <h5 class="card-title">{{ project.name }}</h5>
                            <div class="d-flex flex-row">
                                <p><ins>Créateur du Projet</ins> :</p>
                                <p style="font-weight: bold; margin-left: 0.5em">{{ project.account.firstname }} {{ project.account.lastname }}</p>
                            </div>
                            <p class="card-text"><ins>Description du projet</ins> :  {{ project.description }}</p>
                            <p>Compétences voulues : NULL</p>
                            <p>Nombre de personnes attendues : NULL</p>
                        </div>
                    </div>

                    <div>

                    </div>

                    <div class="card-body " style="max-width: 2em; margin-right: 1em">
                        <a data-toggle="tooltip" data-placement="top" title="Signaler le projet" href="{{ path( 'applyToProject', {'idProject': project.id, } ) }}"><i class="far fa-flag text-danger" styel=" margin-left: auto; "></i></a>
                    </div>
                </div>

            <div class="card-body flex-row" style="margin: 1em; width:100%" align="center">
                {{ form_start(form, {'attr':{'class':'w-75 d-flex flex-column'}} )}}
                {{ form_row(form.description) }}
                <div class="mt-4 d-flex justify-content-center w-100 button">
                    {{ form_row(form.Sauvegarder)}}
                </div>
                <div class="d-flex justify-content-center mt-2" align="center">
                    <div>
                        <a href="{{ path('allProjects') }}" class="btn btn-primary" align="center">Retour</a>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        </div>   
        


    </section>


{% endblock %}