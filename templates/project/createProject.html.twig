{% extends 'base.html.twig' %}

{% block title %}Nouveau projet{% endblock %}

{% block body %}
    <section class="page-section">

        <div class="d-flex justify-content-center">
            {{ form_start(form, {'attr':{'class':'w-75 d-flex flex-column'}} )}}
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.repo) }}
            {{ form_row(form.skillsNeeded) }}
            {{ form_row(form.jobNeeded) }}
            <div class="mt-4 d-flex justify-content-center w-100 button">
                {{ form_row(form.Sauvegarder)}}
            </div>
            <div class="d-flex justify-content-center mt-5 w-100" align="center">
                <div class="w-50" align="center">
                    <a href="{{ path('allProjects') }}" class="btn btn-primary mt-5" align="center">Retour</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>


    </section>

{% endblock %}