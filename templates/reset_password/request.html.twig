{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="flex-column page-section justify-content-center mx-auto mt-5 w-75">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 class="display-2 text-center">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre adresse email pour recevoir
                un lien vous permettant de réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary mt-2">Envoyer l'email</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
